<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="9dp"
    android:background="#3f000f"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:src="@drawable/cover"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text=" সুবহানাল্লাহ আলহামদুলিল্লাহ লা ইলাহা ইল্লাল্লাহু আল্লাহু আকবার "
        android:textSize="25sp"
        android:textColor="#06ff06"
        android:background="#141414"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="0"
        android:textColor="#1f4788"
        android:textSize="40sp"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#545aa7"
        />



    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Add"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#06ff06"
        android:layout_marginTop="5dp"
        android:backgroundTint="#828282"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#a0707e"
        android:text="Sub"
        android:textAlignment="center"
        android:textColor="#06ff06"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Reset"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#06ff06"
        android:layout_marginTop="5dp"
        android:backgroundTint="#c75957"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="WELCOME"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#00dcf1"
        android:background="#eb3727"
        />


</LinearLayout>